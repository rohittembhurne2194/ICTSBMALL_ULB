
@{
    ViewBag.Title = "AURMenuIndex";
    Layout = "~/Views/Shared/_AURLayout.cshtml";
    var DivisionId = (string)ViewData["DivisionId"];
    var DistrictId = (string)ViewData["DistrictId"];
    var AppId = (string)ViewData["AppId"];
}
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<style>
    .canvasjs-chart-credit {
        color: #fff !important
    }
</style>
<br />
@*<input type="hidden" value="0" id="appid" />*@
<input type="hidden" value="@DivisionId" id="DivisionId" />
<input type="hidden" value="@DistrictId" id="DistrictId" />
<input type="hidden" value="@AppId" id="AppId" />

<h3 style="margin-left:15px">Please Select ULB</h3>
<div class="d-flex justify-content-between">
    <div class="card-block" style=" margin-left:5%">
        <div style="position:relative;top: 94%;z-index: 1; background-color:#fff;height:12px;width:62px;padding-top:10px">

        </div>

        <div id="chartContainer" style="height: 200px; width: 180px;"></div>
    </div>
    <div class="card-block">
        <div style="position:relative;top: 94%;z-index: 1; background-color:#fff;height:12px;width:62px;padding-top:10px">

        </div>
        <div id="chartContainer1" style="height: 200px; width: 180px;"></div>
    </div>
    <div class="card-block" style=" margin-right:12%">
        <div style="position:relative;top: 94%;z-index: 1; background-color:#fff;height:12px;width:62px;padding-top:10px">

        </div>
        <div id="chartContainer2" style="height: 200px; width: 270px;"></div>
    </div>
</div>
<div class="content-inner" style="overflow-y:auto">
    <br />
    <div style="width:100%; margin:0 auto;">
        @*<a href="AttendenceIndex" class="btn btn-success btn-sm float-right" type="button">Attendance</a>
            <a href="AddHSEmployeeDetails" class="btn btn-success btn-sm float-right" type="button">Add Employee</a>*@
        @*<label style="display:inline-flex;padding-right:5px" class="float-right">Search:&nbsp;<input type="text" id="s" class="form-control form-control-sm" onkeyup="Search()"></label>*@
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" style="font-size:14px">

            <thead style="font-size:14px">


                <tr>
                    <th> ULB ID</th>
                    <th> ULB Name</th>
                    <th> Total Properties</th>
                    <th> Total Scanning Today</th>
                    <th> Total Segregated</th>
                    <th> Total Mixed</th>
                    <th> Total Not Received</th>
                </tr>
            </thead>


        </table>
    </div>
</div>
<script>
    /* total property*/
    CanvasJS.addColorSet("customColors1", ["#ff6384", "#36a2eb", "#ffce56"]);
    var chart = new CanvasJS.Chart("chartContainer", {
        colorSet: "customColors1",
        title: {
            text: "1234567",
            verticalAlign: "center",
            dockInsidePlotArea: true,
            fontColor: "#ff6384",
            fontSize: 26,
            fontFamily: "arial"
        },
        legend: {
            verticalAlign: "bottom"
        },
        data: [{
            type: "doughnut",
            startAngle: -90,
            innerRadius: "80%",
            showInLegend: false,
            legendMarkerType: "square",
            dataPoints: [
                { y: 70, name: "Red" },
                { y: 10, name: "Green" },
                { y: 20, name: "Yellow" }
            ]
        }]
    });

    chart.render();

    /*Total Scanning */
    CanvasJS.addColorSet("customColors1", ["#ff6384", "#36a2eb", "#ffce56"]);

    var chart = new CanvasJS.Chart("chartContainer1", {
        colorSet: "customColors1",
        title: {
            text: "1234567",
            verticalAlign: "center",
            dockInsidePlotArea: true,
            fontColor: "#ff6384",
            fontSize: 26,
            fontFamily: "arial"
        },
        legend: {
            verticalAlign: "bottom"
        },
        data: [{
            type: "doughnut",
            startAngle: -90,
            innerRadius: "80%",
            showInLegend: false,
            legendMarkerType: "square",
            dataPoints: [
                { y: 70, name: "Red" },
                { y: 10, name: "Green" },
                { y: 20, name: "Yellow" }
            ]
        }]
    });

    chart.render();

    /*chart type*/
    CanvasJS.addColorSet("customColors", ["#ff6384", "#36a2eb", "#ffce56"]);
    var res_mixed_coll = 70 * 100 / 100;
    var res_bif_coll = 10 * 100 / 100;
    var res_not_coll = 20 * 100 / 100;
    var chart = new CanvasJS.Chart("chartContainer2", {
        colorSet: "customColors",
        title: {
            text: "1234567",
            verticalAlign: "center",
            dockInsidePlotArea: true,
            fontColor: "#ff6384",
            fontSize: 26,
            fontFamily: "arial"
        },
        toolTip: {
            content: "In Numbers {number}",
        },
        legend: {
            maxWidth: 90,

            fontSize: 14,
            verticalAlign: "center",
            horizontalAlign: "right"
        },
        data: [{
            type: "doughnut",
            startAngle: -90,
            innerRadius: "80%",
            legendText: "{name}:{y}%",
            showInLegend: true,
            legendMarkerType: "square",
            dataPoints: [
                { y: res_mixed_coll, name: "Red", number: 70 },
                { y: res_bif_coll, name: "Green", number: 10 },
                { y: res_not_coll, name: "Yellow", number: 20 }
            ]
        }]
    });

    chart.render();
</script>
